<p id="notice"><%= notice %></p>

<h1>User Infos</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Postel code</th>
      <th>State</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_infos.each do |user_info| %>
      <tr>
        <td><%= user_info.firstname %></td>
        <td><%= user_info.lastname %></td>
        <td><%= user_info.phone %></td>
        <td><%= user_info.address %></td>
        <td><%= user_info.city %></td>
        <td><%= user_info.postel_code %></td>
        <td><%= user_info.state %></td>
        <td><%= user_info.image %></td>
        <td><%= user_info.user %></td>
        <td><%= link_to 'Show', user_info %></td>
        <td><%= link_to 'Edit', edit_user_info_path(user_info) %></td>
        <td><%= link_to 'Destroy', user_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

