<p id="notice"><%= notice %></p>


<%= form_tag atm_maches_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>



<h1>Atm Maches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atm_maches.each do |atm_mach| %>
      <tr>
        <td><%= atm_mach.name %></td>
        <td><%= atm_mach.address %></td>
        <td><%= link_to 'Start', atm_mach %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atm Mach', new_atm_mach_path %>
